<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.AccountDetails">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="#B57E2A"
        android:layout_gravity="center"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="20dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"

            android:layout_gravity="center"
            android:layout_height="30dp"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Complete Your details"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            />


    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="50dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:drawableStart="@drawable/ic_baseline_person_24"
            android:layout_height="wrap_content"
            android:hint="Enter Full Name"
            android:inputType="text"
            android:maxLines="1"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="50dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:layout_height="wrap_content"
            android:hint="Enter Email"
            android:inputType="text"
            android:maxLines="1"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="50dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_phone_android_24"
            android:hint="Enter PhoneNumber"
            android:inputType="phone"
            android:maxLines="1"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="50dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_location_on_24"
            android:hint="Enter Location"
            android:inputType="text"
            android:maxLines="1"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="50dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Work Hours"
            android:inputType="text"
            android:drawableStart="@drawable/ic_baseline_work_outline_24"
            android:maxLines="1"
            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="50dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Service fee"
            android:inputType="text"
            android:drawableStart="@drawable/ic_baseline_attach_money_24"
            android:maxLines="1"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/ivCamera"
            android:layout_width="50dp"
            android:src="@drawable/ic_baseline_camera_alt_24"
            android:layout_gravity="center"
            android:layout_height="50dp"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="15sp"
            android:text="Complete Your details"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            />


    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUser"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_marginTop="10dp"
        android:layout_marginVertical="20dp"
        android:layout_width="match_parent"
        android:backgroundTint="#B57E2A"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="150dp"
        android:text="Save"
        />

    <Button
        android:backgroundTint="#B57E2A"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="150dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        />




</LinearLayout>